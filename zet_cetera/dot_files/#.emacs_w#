(setq auto-mode-alist
      (append '((".*\\.txt\\'" . ruby-mode))
              auto-mode-alist))
(setq auto-mode-alist
      (append '((".*\\.vim\\'" . ruby-mode))
              auto-mode-alist))
(setq auto-mode-alist
      (append '((".*\\.msg\\'" . ruby-mode))
              auto-mode-alist))
