(semantic-add-system-include "/usr/include" 'c++-mode)
(semantic-add-system-include "/usr/include/c++/5" 'c-mode)
(semantic-add-system-include "/usr/include/c++/5" 'c++-mode)
(semantic-add-system-include "/opt/ros/kinetic/include" 'c++-mode)


;; Company mode On
