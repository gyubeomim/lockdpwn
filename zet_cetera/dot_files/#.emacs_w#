(defun newline-without-break-of-line ()
  "1. move to end of the line, 2. insert newline with index."
  (interactive)
  (let ((oldpos (point)))
    (end-of-line)
    (newline-and-indent)))

(defun newline-without-break-of-line-upper ()
  "1. move to end of the line, 2. insert newline with index above."
  (interactive)
  (let ((oldpos (point)))
    (beginning-of-line)
    (open-line 1)))

;; Ctrl + F íê¶ç‘œ¼ ëëŠ»ç‘œëŒ€ãˆƒ ìì˜„ëë£ìì‘æ¿¡œ é®ˆ ëì”ªìì”¤ìì”  íë¸¯ëêµ¹ ï§ëš®ë±¾ìë¼±ï§ë¬ë•²ëë– (vimìì“½ oíê¶ì™€ ëë£ìì”ªíë¹€ëë•²ëë–)
(global-set-key "\C-f" 'newline-without-break-of-line)

;; Ctrl + O íê¶ç‘œ¼ ëëŠ»ç‘œëŒ€ãˆƒ ìì˜„ëë£ìì‘æ¿¡œ íë¸³ ä»¥„ ìììë¿‰ é®ˆ ëì”ªìì”¤ìì”  íë¸¯ëêµ¹ ï§ëš®ë±¾ìë¼±ï§ë¬ë•²ëë–
(global-set-key "\C-o" 'newline-without-break-of-line-upper)


;; Crtl + e íê¶æ¿¡œ íì½ìì˜± è€Œã…¼ê½Œìì“½ ëì”ªìì”¤ ï§¨ ìë¸µç§»ëª„ì‘æ¿¡œ ìì” ëë£íë¹€ëë•²ëë–
(global-set-key (kbd "C-e") 'move-beginning-of-line)
(add-hook 'c-mode-hook
          '(lambda ()
             (local-set-key (kbd "C-e") 'move-beginning-of-line))
          )
(add-hook 'c++-mode-hook
          '(lambda ()
             (local-set-key (kbd "C-e") 'move-beginning-of-line))
          )

;; Alt + e íê¶æ¿¡œ íì½ìì˜± è€Œã…¼ê½Œìì“½ ëì”ªìì”¤ ï§¨ ëë®˜ç§»ëª„ì‘æ¿¡œ ìì” ëë£íë¹€ëë•²ëë–
(global-set-key (kbd "M-e") 'move-end-of-line)
(add-hook 'c-mode-hook
          '(lambda ()
             (local-set-key (kbd "M-e") 'move-end-of-line))
          )
(add-hook 'c++-mode-hook
          '(lambda ()
             (local-set-key (kbd "M-e") 'move-end-of-line))
          )

