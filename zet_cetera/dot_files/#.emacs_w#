 '(org-capture-prepare-finalize-hook
   (quote
    ((lambda nil
       (goto-line
        (+
         (line-number-at-pos)
         -2))
       (beginning-of-line)
       (insert "*"))
     (lambda nil
       (progn
         (setq num 1)
         (loop
          (< num 500)
          (let
              ((numbering
                (concat "#"
                        (number-to-string num)))
               (content
                (with-current-buffer
                    (cadr
                     (split-string
                      (buffer-name)
                      "-"))
                  (buffer-substring-no-properties
                   (point-min)
                   (point-max))))
               (capture_content
                (with-current-buffer
                    (buffer-name)
                  (buffer-substring-no-properties
                   (point-min)
                   (point-max)))))
            (if
                (string-match "[*][*][*][*]" capture_content)
                (if
                    (save-excursion
                      (goto-char
                       (point-min))
                      (string-match numbering content))
                    nil
                  (return
                   (progn
                     (end-of-line)
                     (insert numbering))))
              (return))
            (setq num
                  (1+ num)))))))))
