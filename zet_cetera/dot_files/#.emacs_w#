;; íë™†ìì” ìëœ« ï§â‘¤ë±¶ ëë–’ç•°ëº¥ê¶ç‘œ¼ ìê½•ìì ™íë¹€ëë•²ëë–
(add-hook 'python-mode-hook
          (lambda ()
            (jedi:setup)
            (jedi:ac-setup)
            (define-key jedi-mode-map (kbd "C-c /") nil)
            (local-set-key (kbd "M-,") 'jedi:goto-definition-pop-marker)
            (local-set-key (kbd "M-.") 'jedi:goto-definition)

            ;; íë™†ìì” ìëœ« ìê½‘íê¹®íë¸³ììºìë¿­ìì“£ < ëì‚‰ëë’— > ï§ŸìŒì‘æ¿¡œ ìì” ëë£íë¹€ëë•²ëë–
            (local-unset-key (kbd "C-c >"))
            (local-unset-key (kbd "C-c <"))
            (local-set-key (kbd "C-<") 'python-indent-shift-left)
            (local-set-key (kbd "C->") 'python-indent-shift-right)
            (setq indent-tabs-mode t)
            (setq python-indent-offset 4)
            (setq tab-width 4)

            (elpy-mode)         ;; elpy mode ç•°ë¶½°€ ("M-t" : elpy-rgrepìì‘æ¿¡œ referenceç‘œ¼ ï§¡ì– ì“£ ìë‹” ìì—³ìë’¿ëë•²ëë–)
            ))


;; elpyìë¿‰ìê½Œ ìê¶—ììŠœíë¸¯ëë’— ï§â‘¤ë±º keymapìì“£ é®ê¾ªì†¢ìê½¦íì†•íë¹€ëë•²ëë–
(setq elpy-mode-map nil)

;; elpy ï§â‘¤ë±¶åª›€ ìë–íë»¾ëë¦ºæ€¨  ëêµ¹ìê½Œ ìê½•ìì ™íë¸¯æ€¨  ìë–¢ì€ è‚„ë¶¾ë±¶ëë’— ìë¸˜ëì˜’ ìì˜‰ìê½¦íë¸³ëë–
(eval-after-load "elpy" (lambda ()
                          ;; Alt + t íê¶æ¿¡œ referenceç‘œ¼ ï§¡ì– ë¸˜ä»¥€ëë– (grep -r ï§ë‚…ì¡Šìë¼±ì™€ é®ê¾©ë“‚íë¸¯ëë–æ€¨  íë¸³ëë–)
                          (local-set-key (kbd "M-t") 'elpy-rgrep-symbol)

                          ;; elpy-modeìë¿‰ìê½Œ éº€åª›€ììŸ»ìì‘æ¿¡œ ìë–íë»¾ëë¦ºëë’— ï§â‘¤ë±º ï§â‘¤ë±¢ëë±¾ìì“£ íë¹ìì £íë¸³ëë–
                          (remove-hook 'elpy-modules 'elpy-module-flymake)
                          (remove-hook 'elpy-modules 'elpy-module-yasnippet)
                          (remove-hook 'elpy-modules 'elpy-module-highlight-indentation)
                          (remove-hook 'elpy-modules 'elpy-module-django)
                          (remove-hook 'elpy-modules 'elpy-module-company)
                          (remove-hook 'elpy-modules 'elpy-module-eldoc)
                          (remove-hook 'elpy-modules 'elpy-module-pyvenv)
                          (remove-hook 'elpy-modules 'elpy-module-sane-defaults)
                          ))



;; PACKAGE : org mode
;; DONE ìë–†ìë¿‰ CLOSED timestampç‘œ¼ ìê¶—ììŠœíë¸¯ëë’— íë¸¿ìë‹”
(defun my/org-mode-hook ()
  (progn
    "Stop the org-level headers from increasing in height relative to the other text."
    (dolist (face '(org-level-1))
      (set-face-attribute face nil :weight 'normal :height 1.2))

    (dolist (face '(org-level-2
                    org-level-3
                    org-level-4
                    org-level-5))
      (set-face-attribute face nil :weight 'normal :height 0.98))
    ))

;; org ï§â‘¤ë±¶åª›€ ìë–íë»¾ëë¦ºæ€¨  ëêµ¹ìê½Œ ìê½•ìì ™íë¸¯æ€¨  ìë–¢ì€ è‚„ë¶¾ë±¶ëë’— ìë¸˜ëì˜’ ìì˜‰ìê½¦íë¸³ëë–
;; "org" because C-h f org-mode RET says that org-mode is defined in org.el
(eval-after-load "org"
  '(progn
     ;; ed: ëë–’ç•°ëº¥ê¶ íë¹ìì £
     (define-key org-mode-map (kbd "<M-right>") nil)
     (define-key org-mode-map (kbd "<M-left>") nil)
     (define-key org-mode-map (kbd "<S-right>") nil)
     (define-key org-mode-map (kbd "<S-left>") nil)
     (define-key org-mode-map (kbd "<S-up>") nil)
     (define-key org-mode-map (kbd "<S-down>") nil)
     (define-key org-mode-map (kbd "C-k") nil)
     (define-key org-mode-map (kbd "C-y") nil)
     (define-key org-mode-map (kbd "q") nil)
     (define-key org-mode-map (kbd "<C-tab>") nil)
     (define-key org-mode-map (kbd "<C-S-left>") nil)
     (define-key org-mode-map (kbd "<C-S-right>") nil)
     (define-key org-mode-map (kbd "C-a") nil)
     (define-key org-mode-map (kbd "C-C /") nil)
     (define-key org-mode-map (kbd "C-,") nil)
     (define-key org-mode-map (kbd "C-c <up>") nil)
     (define-key org-mode-map (kbd "C-c <down>") nil)
     (define-key org-mode-map (kbd "C-c a") nil)
     (define-key org-mode-map (kbd "C-m") nil)
     (define-key org-mode-map (kbd "M-f") nil)
     (define-key org-mode-map (kbd "<C-down>") nil)
     (define-key org-mode-map (kbd "M-e") nil)
     (define-key org-mode-map (kbd "C-'") nil)
     (define-key org-mode-map (kbd "C-c C-q") nil)
     (define-key org-mode-map (kbd "M-h") nil)
     (define-key org-mode-map (kbd "C-c \\") nil)
     (define-key org-mode-map (kbd "C-e") nil)
     (define-key org-mode-map (kbd "C-c C-l") nil)

     ;; ed: ëë–’ç•°ëº¥ê¶ ëë²‘æ¿¡
     (define-key org-mode-map (kbd "<M-S-right>") 'org-shiftright)
     (define-key org-mode-map (kbd "<M-S-left>") 'org-shiftleft)
     (define-key org-mode-map (kbd "<M-S-up>") 'org-shiftup)
     (define-key org-mode-map (kbd "<M-S-down>") 'org-shiftdown)
     (define-key org-mode-map (kbd "<C-S-right>") 'org-metaright)
     (define-key org-mode-map (kbd "<C-S-left>") 'org-metaleft)
     ;; org capture æ¹²ê³•ë’« ëë–’ç•°ëº¥ê¶ (C-m ìì”  <return>æ€¨¼ ç•°â‘¸ë£ëêµ¹èª˜€æ¿¡œ C-. ìì‘æ¿¡œ è¹‚€å¯ƒì€ë»½ëë–)
     (define-key org-mode-map (kbd "C-.") 'org-capture)
     ;; org-modeç‘œ¼ ì €ìì˜£íë¸· ëë¸£ï§ëˆë– htmlæ¿¡œ previewç‘œ¼ è¹‚ëŒë¿¬äºŒì‡°ë’— ëë–’ç•°ëº¥ê¶
     (define-key org-mode-map (kbd "C-c w") 'org-preview-html/preview)
     ;; code ==> image Update ëë–’ç•°ëº¥ê¶
     (define-key org-mode-map (kbd "C-c q") 'org-toggle-inline-images)
     ;; org  ==> markdown export ëë–’ç•°ëº¥ê¶
     (define-key org-mode-map (kbd "C-c m") 'org-md-export-to-markdown)
     ;; Shift + Enter íê¶æ¿¡œ íì½ìì˜± ï§ê³¹ê²•ç‘œ¼ ìë¿½ëë•²ëë–
     (define-key org-mode-map (kbd "<S-return>") 'org-open-at-point)
     ;; Alt + Enter íê¶æ¿¡œ org-meta-returníê¶ç‘œ¼ ìê½•ìì ™íë¹€ëë•²ëë– (ììëì˜’ open-lineìì‘æ¿¡œ overriding ëë¦ºìë¼± ìì—³ìë¿€ëë–)
     (define-key org-mode-map (kbd "<M-return>") 'org-meta-return)
     ;; C-c v,b íê¶æ¿¡œ org-table ï§â‘¤ë±¶ìë¿‰ìê½Œ ìë¿´æ€¨¼ íë»¾ìì“£ ç•°ë¶½°€íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "C-c b") 'org-table-insert-row)
     (define-key org-mode-map (kbd "C-c v") 'org-table-insert-column)
     ;; C + | íê¶æ¿¡œ ììºìë¿­ìì“£ tableíì†• íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "C-|") 'org-table-create-or-convert-from-region)
     ;; C + . íê¶æ¿¡œ agendaç‘œ¼ ìë–íë»¾íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "C-/") 'org-agenda)
     ;; C-down + M-f íê¶ç‘œ¼ æ¹²ê³•ë‚¯ cpp,python íë™†ìì”ªìë¿‰ìê½Œì™€ åª›ìˆˆì”  æ´Ñ‰Ğ¦ëë–’ììæ¿¡œ ìì” ëë£íë¸¯ëë£„æ¿¡ ìê½•ìì ™íë¹€ëë•²ëë–
     ;; org.elìë¿‰ìê½Œ remapìì”  ëë¦ºìë¼±ìì—³ëëœ• è‚„ë¶¾ë±¶ç‘œ¼ äºŒì‡±ê½ï§£ì„â”íë¸¯ëë•² ìë¸˜ëì˜’ ëëª¢ è‚„ë¶¾ë±¶åª›€ ìì ™ìê¸½ìì˜‰ëë£íë¸³ëë–
     (define-key org-mode-map (kbd "<C-down>") 'forward-paragraph)
     (define-key org-mode-map (kbd "M-f") 'forward-paragraph)
     ;; C-' íê¶æ¿¡œ íê¹­æ´¹ëªƒ¥¼ ìê½•ìì ™íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "C-'") 'org-set-tags-command)
     ;; C-\ íê¶æ¿¡œ org-tags-sparse-tree ï§ë‚…ì¡Šìì“£ ìë–íë»¾íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "C-\\") 'org-tags-sparse-tree)
     ;; C-[ íê¶æ¿¡œ linkç‘œ¼ ìê¶«ìì—¯íë¹€ëë•²ëë–
     (define-key org-mode-map (kbd "H-[") 'org-insert-link)


     ;; DONE ìë–†ìë¿‰ CLOSED timestampç‘œ¼ ìê¶—ììŠœíë¸¯ëë’— ìê½•ìì ™
     (setq org-log-done 'time)
     ;; org-modeìë¿‰ìê½Œ ìì” èª˜ëª„§€ç‘œ¼ è¹‚ëŒë¿¬äºŒì‡°ë’— ìê½•ìì ™
     ;; (setq org-startup-with-inline-images t)
     ;; src blockìë¿‰ syntax highlightingìì“£ íë¹äºŒì‡°ë’— íë™£íê¶ï§€
     (setq org-src-fontify-natively t)
     ;; org-modeç‘œ¼ ìë–†ìì˜‰íë¸· ëë¸£ unfold all
     ;;(setq org-inhibit-startup-visibility-stuff t)
     ;; org-modeìë¿‰ìê½Œ ìì” èª˜ëª„§€ íê²•æ¹²ê³•¥¼ ä»¥ê¾©ì” æ¹²° ììíë¸³ ìê½•ìì ™
     (setq org-image-actual-width nil)
     ;; tagåª›€ ëë––ç”±Ñ‰ë’— ììç§»˜ ìê½•ìì ™
     (setq org-tags-column 120)
     (setq org-startup-indented nil)
     ;; org-agenda viewìë¿‰ìê½Œ íë¸¯çŒ·â‘£°€ ï§€ëê¶ƒ ëë®˜æºëš¯§€ deadlineìì”  ìë¾¾ëë’— å¯ƒìŒìŠ¦ æ€¨ê¾©ëƒ½ ëëŠ»ììŸ»ëë¦ºï§€ ìë¸¡ëë£„æ¿¡ ìê½•ìì ™
     (setq org-scheduled-past-days 0)
     (setq org-todo-keywords
           '((sequence "TODO" "DOING" "PENDING" "|" "REPLACED" "CANCELLED"  "DONE")))
     ;; Setting Colours (faces) for todo states to give clearer view of work
     (setq org-todo-keyword-faces
           '(("CANCELLED" . "red")
             ("REPLACED" . "purple")
             ("PENDING" . "orange")
             ("DOING" . "yellow")
             ))

     ;; org-bullets ï§â‘¤ë±¶ íì†¢ìê½¦íì†•
     ;; (add-hook 'org-mode-hook (lambda () (org-bullets-mode t)))
     ;; wrap line
     (add-hook 'org-mode-hook (lambda () (setq truncate-lines nil)))
     ;; header íê²•æ¹²° è¹‚€íë¸¯ï§€ ìë¸¡å¯ƒŒ
     (add-hook 'org-mode-hook 'my/org-mode-hook)

     ;; org-link ìë¿‰ìê½Œ .pdf íë™†ìì”ªì€ foxit readeræ¿¡œ ìë¿´ëë£„æ¿¡ ìê½•ìì ™íë¸³ëë–
     (setq org-file-apps
      '((auto-mode . emacs)
        ("\\.pdf\\'" . "~/opt/foxitsoftware/foxitreader/FoxitReader \"%s\"")
        ("\\.pdf::\\([0-9]+\\)\\'" . "~/opt/foxitsoftware/foxitreader/FoxitReader \"%s\" -p %1")
        ))

     ;; íë¹ëë–¦ íë¤ƒëëœ‘ ëê¶¡ìë¿‰ ï§â‘¤ë±º .org íë™†ìì”ªìì“£ agenda viewìë¿‰ ëë²‘æ¿¡ì•ºë¸³ëë–
     (setq org-agenda-files (file-expand-wildcards "~/gitrepo/ims_org/org_files/*.org"))
     (setq org-agenda-files (file-expand-wildcards "~/gitrepo/ims_org/org_files/note/*.org"))
     ;; C-. íê¶æ¿¡œ ìê¶—ììŠœíë¸· note íë™†ìì”ª
     (setq org-default-notes-file "~/gitrepo/ims_org/org_files/edward.org")
     ;; orgm
     ;; org-captureìë¿‰ìê½Œ ìê¶—ììŠœíë¸· ï§â‘¸ì¤‰ëë±¾ ìê½•ìì ™
     (setq org-capture-templates '(("1" "edward.org: [Task]" entry
                                    (file+headline "~/gitrepo/ims_org/org_files/edward.org" "Tasks")
